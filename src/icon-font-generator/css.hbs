/**************************** Icon Font *****************************/
@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

[class*="icon-"]:before {
    font-family: {{fontName}} !important;
    font-style: normal;
    font-weight: normal !important;
    vertical-align: top;
    line-height: 1;
}

{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
    content: "\\{{ this }}";
}
{{/ each }}